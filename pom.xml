<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>me.snowdrop.booster</groupId>
	<artifactId>istio-ab-testing-spring-boot</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>io.openshift.booster</groupId>
		<artifactId>spring-boot-booster-parent</artifactId>
		<version>1.5.10-6</version>
	</parent>

	<properties>
		<java.version>1.8</java.version>
		<fabric8-maven-plugin.version>3.5.34</fabric8-maven-plugin.version>
		<version.fmp-istio-enricher>0.2-SNAPSHOT</version.fmp-istio-enricher>
		<version.kubernetes-model>2.0.4</version.kubernetes-model>
        <skip.fmp>true</skip.fmp>
	</properties>

	<modules>
		<module>client-service-consumer</module>
		<module>service-a</module>
		<module>service-b</module>
	</modules>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<profiles>
						<profile>development</profile>
					</profiles>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<profiles>
		<profile>
			<id>openshift</id>
			<build>
				<plugins>
					<plugin>
						<groupId>io.fabric8</groupId>
						<artifactId>fabric8-maven-plugin</artifactId>
						<dependencies>
							<dependency>
								<groupId>me.snowdrop</groupId>
								<artifactId>fmp-istio-enricher</artifactId>
								<version>${version.fmp-istio-enricher}</version>
							</dependency>
							<!-- Version of the model required to use istio enricher -->
							<dependency>
								<groupId>io.fabric8</groupId>
								<artifactId>kubernetes-model</artifactId>
								<version>2.0.4</version>
							</dependency>
						</dependencies>
						<executions>
							<execution>
								<goals>
									<goal>resource</goal>
									<goal>build</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<profile>istio-default</profile>
							<skip>${skip.fmp}</skip>
							<enricher>
								<config>
									<fmp-istio-enricher>
										<istioVersion>0.6.0</istioVersion>
									</fmp-istio-enricher>
								</config>
							</enricher>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>sonatype-snapshot</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
		</repository>
		<repository>
			<id>jboss-snapshots-repository</id>
			<name>JBoss Snapshots Repository</name>
			<url>https://repository.jboss.org/nexus/content/repositories/snapshots/</url>
		</repository>
	</repositories>

</project>
